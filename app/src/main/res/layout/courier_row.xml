<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/rect_background"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="350dp"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/courier_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Gg"
            android:layout_margin="2dp"
            android:textSize="20sp"
            android:textColor="#000"
            android:elevation="2dp"

            android:textStyle="bold" />

        <ImageView
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:id="@+id/show_hide_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:src="@android:drawable/arrow_down_float"

            />
    </RelativeLayout>
    <!--Hide/show layout -->

    <LinearLayout
        android:id="@+id/hidden_panel"
        android:elevation="10dp"
        android:translationZ="@dimen/activity_horizontal_margin"
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--Logo,contact,email-->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/courier_logo"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_menu_courier"
                android:scaleType="fitCenter"
                android:padding="2dp"
                android:cropToPadding="true" />
            <!--contact,email-->

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <!--Contact number and call button-->

                <RelativeLayout
                    android:background="#9ef7a5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/courier_contact_no"
                        android:layout_margin="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="444" />

                    <ImageView
                        android:id="@+id/courier_call"
                        android:contentDescription="Call"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:src="@android:drawable/ic_menu_call"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        />
                </RelativeLayout>
                <!--[END]Contact number and call button-->

                <!--Email id and send email button-->
                <RelativeLayout
                    android:background="#48b8f1"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/courier_email"
                        android:text="abc@xyz.com" />

                    <ImageView
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:id="@+id/courier_mail_send"
                        android:contentDescription="Mail"
                        android:src="@android:drawable/ic_menu_send"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content" />

                </RelativeLayout>
                <!--[END]Email id and send email button-->
            </LinearLayout>
            <!--[END]contact,email-->

        </LinearLayout>
        <!--[END]Logo,contact,email-->
        <!--Rating bar and #User-->
        <RelativeLayout
            android:layout_margin="2dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RatingBar
                android:id="@+id/courier_rating"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:isIndicator="true"

                style="?android:attr/ratingBarStyleIndicator"
                android:layout_centerInParent="true"
                />
            <TextView
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:id="@+id/courier_rated_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:text="66"/>
        </RelativeLayout>
        <!--[END]Rating bar and #User-->

    </LinearLayout>
    <!--Hide/show layout END -->
    <!--<View
        android:background="#bfbef5"
        android:layout_width="match_parent"
        android:paddingTop="2dp"
        android:layout_margin="2dp"
        android:layout_height="1dp"/>-->
</LinearLayout>

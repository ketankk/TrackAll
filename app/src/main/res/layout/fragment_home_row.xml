<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="3dp"
    app:cardElevation="3dp">
<RelativeLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:padding="3dp"
    >
    <TextView
        android:id="@+id/hist_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:text="Name"
        android:padding="1dp"
        android:textSize="10sp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/hist_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="ID"
        android:textColor="#aeea07"
        android:textSize="25sp"
        android:padding="2dp"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:singleLine="true"
        android:layout_toRightOf="@+id/hist_date"

        />
    <ImageView
        android:id="@+id/bookmarkMenu"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:src="@drawable/options"
        android:layout_alignParentRight="true"
        />
    <TextView
        android:id="@+id/hist_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DD-MM-YYYY"
        android:layout_below="@+id/hist_name"
        android:layout_margin="2dp"
        android:textSize="12sp"
        />
    <RatingBar
        android:id="@+id/bm_rating"
        android:layout_below="@+id/hist_id"
        android:layout_width="wrap_content"
        android:layout_toLeftOf="@+id/bookmarkMenu"
        style="?android:attr/ratingBarStyleIndicator"
        android:stepSize="0.1"
        android:layout_height="wrap_content"
        android:isIndicator="true"
        />
</RelativeLayout>

</android.support.v7.widget.CardView>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="in.kuari.trackall.activities.ListAllCourier"
    tools:showIn="@layout/list_all_courier"

    >


<EditText
    android:id="@+id/input_courier_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:hint="Enter Courier Name"
    android:layout_gravity="center_horizontal"
    />
<android.support.v7.widget.RecyclerView
    android:id="@+id/rc_all_courier"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:padding="20dp"
    android:layout_gravity="center_horizontal"
    android:layout_below="@+id/input_courier_name"
    >

</android.support.v7.widget.RecyclerView>
</LinearLayout>

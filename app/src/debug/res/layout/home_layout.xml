<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="30dp"
    android:id="@+id/lin_home"
    >

    <EditText
        android:id="@+id/input_trackID_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter Tracking ID"
        android:layout_weight="70"
        />
    <Button
        android:id="@+id/submit_trackID"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:background="@drawable/ic_menu_send"
        android:clickable="true"
        android:layout_toEndOf="@+id/input_trackID"
        />
</LinearLayout>

    <ListView
        android:id="@+id/list_courier_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lin_home"
        android:layout_margin="10dp"
        >

    </ListView>
</RelativeLayout>
